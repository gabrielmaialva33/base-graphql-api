{
  "name": "base-graphql-api",
  "version": "1.0.0",
  "description": "A complete Node.js project template using TypeScript and following general best practices.",
  "keywords": [
    "typescript",
    "template"
  ],
  "author": {
    "name": "Gabriel Maia",
    "url": "https://github.com/gabrielmaialva33"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gabrielmaialva33/base-graphql-api.git"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean": "rimraf build",
    "build": "tsc",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register build/server.js",
    "watch:build": "tsc --watch",
    "watch:server": "nodemon",
    "watch:test": "nodemon --watch './**/*.ts' --exec 'ts-node' bin/test.ts",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:reset": "knex migrate:rollback && knex migrate:latest && knex seed:run",
    "test": "ts-node bin/test.ts",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "@typescript-eslint/naming-convention": [
        "off"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@japa/api-client": "^1.4.1",
    "@japa/assert": "^1.3.5",
    "@japa/run-failed-tests": "^1.0.8",
    "@japa/runner": "^2.1.1",
    "@japa/spec-reporter": "^1.2.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.7.15",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "knex-tiny-logger": "^2.1.0",
    "nodemon": "^2.0.19",
    "openapi-types": "^12.0.2",
    "prettier": "^2.7.1",
    "source-map-resolve": "^0.6.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.2",
    "yarn-upgrade-all": "^0.7.1"
  },
  "dependencies": {
    "apollo-server": "^3.10.2",
    "argon2": "^0.29.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.2",
    "graphql": "^15.3.0",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.3.0",
    "pg": "^8.8.0",
    "pg-connection-string": "^2.5.0",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "type-graphql": "^1.1.1"
  }
}
